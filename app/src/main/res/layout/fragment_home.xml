<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-72dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/my_custom_background"
                android:orientation="horizontal"
                android:id="@+id/BackInfo">
                >

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingLeft="0dp"
                    android:text="Trang chủ"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/my_custom_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="0.23"
                    android:layout_marginRight="20dp"
                    android:id="@+id/image_store"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:background="@drawable/store_icon"
                    android:scaleType="center"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/image_food"
                    android:layout_width="0dp"
                    android:layout_weight="0.23"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@drawable/food_icon"
                    android:scaleType="center"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/image_search"
                    android:layout_width="0dp"
                    android:layout_weight="0.23"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:background="@drawable/search"
                    android:scaleType="center"
                    tools:ignore="MissingConstraints" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:id="@+id/image_cart"
                    android:layout_width="0dp"
                    android:layout_weight="0.23"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:background="@drawable/cart_icon"
                    android:scaleType="center"
                    tools:ignore="MissingConstraints" />



            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/my_custom_background"
                android:orientation="horizontal"
                android:id="@+id/nav_food">
                >

                <TextView
                    android:id="@+id/txtfood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingLeft="0dp"
                    android:text="Thức ăn"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <GridView
                android:id="@+id/gridfood"
                android:layout_width="fill_parent"
                android:layout_height="785dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right"
                android:verticalSpacing="10dp">
            </GridView>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/my_custom_background"
                android:orientation="horizontal"
                android:id="@+id/nav_gridstore">
                >

                <TextView
                    android:id="@+id/txtTitleStore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingLeft="0dp"
                    android:text="Cửa hàng"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <GridView
                android:id="@+id/gridstore"
                android:layout_width="fill_parent"
                android:layout_height="785dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right"
                android:verticalSpacing="10dp">
            </GridView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>